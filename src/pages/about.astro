---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { t } from "@config";
import { Icon } from "astro-icon/components";
import MainCard from "@/components/MainCard.astro";
import GitHubStats from "@/components/mdx/GitHubStats.astro";
---

<BaseLayout title="About - Kistory">
  <MainCard
    title="About Kistory"
    description="Developer, open-source enthusiast, dream to a open-source contributor."
    textOverlay="ABOUT"
    infoIcon="lucide:user"
  >
    <div class="space-y-10 mb-8">
      <!-- Profile Section -->
      <section class="flex flex-col md:flex-row gap-8 items-center md:items-start">
        <div class="avatar">
          <div
            class="w-32 h-32 md:w-40 md:h-40 rounded-xl ring ring-primary ring-offset-base-100 ring-offset-2 overflow-hidden"
          >
            <img src="https://b0.bdstatic.com/4c165265404c33acc368d2c97af097c3.jpg@h_1280" alt="Kistory" width="160" height="160" loading="eager" />
          </div>
        </div>

        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">Kistory</h1>
          <p class="text-xl text-base-content/80 mb-4">Developer & Open-Source Enthusiast</p>

          <div class="flex flex-wrap gap-3 justify-center md:justify-start mb-6">
            <a
              href="https://github.com/EveSunMaple"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:github" class="w-4 h-4" />
              <span>GitHub</span>
            </a>
            <a
              href="https://twitter.com/EveSunMaple"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-outline gap-2"
            >
              <Icon name="lucide:twitter" class="w-4 h-4" />
              <span>Twitter</span>
            </a>
            <a href="mailto:evesunmaple@example.com" class="btn btn-sm btn-outline gap-2">
              <Icon name="lucide:mail" class="w-4 h-4" />
              <span>Email</span>
            </a>
          </div>

          <p class="text-base-content/80">
            Hi , there! I'm Kistory , a junior stuent at CQUT , and major in Computer Science. I have high interest in backend-develop.
            Althought my technology isn't very mature now , I will be one of the best full-stack developer in CN !
          </p>
        </div>
      </section>

      <!-- GitHub Stats -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:github" class="w-6 h-6 text-primary" />
          <span>GitHub Statistics</span>
        </h2>

        <GitHubStats username="OnlyOneArborInMyHeart" showLanguages={false} showCommitGraph={true} />
      </section>

      <!-- Tech Stack -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:code-2" class="w-6 h-6 text-primary" />
          <span>Tech Stack</span>
        </h2>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
          {
            [
              { name: "Astro", icon: "simple-icons:astro", color: "oklch(0.5 0.2 300)" },
              { name: "Springboot", icon: "simple-icons:springboot", color: "oklch(0.7 0.2 140)" },
              { name: "Vue3", icon: "simple-icons:vuedotjs", color: "oklch(0.7 0.2 140)" },
              { name: "HTML5", icon: "simple-icons:html5", color: "oklch(0.7 0.2 30)" },
              { name: "CSS3", icon: "simple-icons:css3", color: "oklch(0.7 0.2 220)" },
              { name: "Javascript", icon: "simple-icons:javascript", color: "oklch(0.7 0.2 220)" },
              { name: "Git", icon: "simple-icons:git", color: "oklch(0.7 0.2 30)" },
              { name: "C++", icon: "simple-icons:cplusplus", color: "oklch(0.6 0.2 240)" },
              { name: "C#", icon: "simple-icons:csharp", color: "oklch(0.6 0.2 160)" },
              { name: "Python", icon: "simple-icons:python", color: "oklch(0.7 0.2 250)" },
            ].map((tech) => (
              <div class="flex flex-col items-center justify-center p-4 bg-base-200 rounded-lg hover:bg-base-300 transition-colors">
                <div class="text-3xl mb-2" style={`color: ${tech.color}`}>
                  <Icon name={tech.icon} class="w-10 h-10" />
                </div>
                <span class="text-sm font-medium">{tech.name}</span>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Contribution Activity -->
      <section>
        <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
          <Icon name="lucide:activity" class="w-6 h-6 text-primary" />
          <span>Recent Activity</span>
        </h2>

        <div class="bg-base-200 rounded-xl p-6 overflow-x-scroll">
          <div class="timeline timeline-vertical md:timeline-horizontal">
            {
              [
                {
                  date: "January 2024",
                  title: "",
                  desc: "",
                },
                {
                  date: "March 2024",
                  title: "",
                  desc: "",
                },
                {
                  date: "July 2024",
                  title: "",
                  desc: "",
                },
                {
                  date: "March 2025",
                  title: "",
                  desc: "",
                },
              ].map((item, i) => (
                <div class="timeline-item mb-8 last:mb-0">
                  <div class="flex items-start gap-4">
                    <div class="flex flex-col items-center">
                      <div class="w-10 h-10 rounded-full bg-primary flex items-center justify-center text-primary-content text-xl">
                        {i + 1}
                      </div>
                      {i < 3 && <div class="w-0.5 h-16 bg-base-300 mt-2" />}
                    </div>
                    <div>
                      <div class="text-sm text-base-content/60 mb-1">{item.date}</div>
                      <h3 class="text-lg font-bold">{item.title}</h3>
                      <p class="text-base-content/80 mt-1">{item.desc}</p>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>
    </div>
  </MainCard>
</BaseLayout>
